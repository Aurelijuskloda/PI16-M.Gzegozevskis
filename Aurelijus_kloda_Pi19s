int getbin()
{
    int de1;
    printf("iveskite dvejetaini skaiciu :\n");
    scanf("%d", &de1);
    printf("binary :%d \n decimal : %d ", de1, conv(de1));
    return 0;

    return 0;
}
int conv(int de1)
{
    int de= 0, i = 0, r=0;
    int  d=de1;
    while (d!=0)
    {
        r = d%10;
        d /= 10;
        de += r*pow(2,i);
        ++i;
    }
    return de;

}

           int getdec(){
               int des;
            printf("iveskite desimtaini skaiciu : \n");
            scanf ("%d", &des);
            int n= des;
//            conv2(des);
            printf("\n>>>decimal : %d", des);
            printf("\n>>>binary : ");
            decToBinary(n);


            }
void decToBinary(int n)
{
    int binaryNum[32];
    int i = 0;
    while (n > 0) {
        binaryNum[i] = n % 2;
        n = n / 2;
        i++;
    }
    for (int j = i - 1; j >= 0; j--)
        printf("%d", binaryNum[j] );
}
