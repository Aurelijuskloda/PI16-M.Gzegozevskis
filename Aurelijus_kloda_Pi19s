int desoct(){
    int E;
printf("ieskite desimtaini skaiciu:  ");
scanf ("%d", &E);
printf("desimtainis skaicius: %d \n astuntainis skaicius : %d", E, octa(E));
}
int octa(int E)
{
    int O = 0, i = 1;
    while (E != 0)
    {
        O += (E % 8) * i;
        E /= 8;
        i *= 10;
    }
    return O;
}
int octtodes()
{
    int octal;

    printf("Iveskite astuntaini skaiciu: ");
    scanf("%d", &octal);

    printf("Astuntainis: %d \n desimtainis: %d", octal, convoct(octal));

    return 0;
}
int convoct(int octal){
{
    int desim = 0, i = 0;

    while(octal != 0)
    {
        desim += (octal%10) * pow(8,i);
        ++i;
        octal/=10;
    }

    i = 1;

    return desim;
}
}
